        <li class="c-w-12 L:c-w-6">
          <a
            href="<%= fvGet.root %>"
            class="p-btn p-btn--radius p-btn--h72 p-btn--text"
          >
            <i class="fas fa-hospital-alt p-btn__i c-mr5"></i>
            <span class="p-btn__label u-700">トップへ</span>
          </a>
        </li>

        <li class="c-w-12 L:c-w-6">
