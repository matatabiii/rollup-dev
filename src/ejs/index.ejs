<%_
const root = './'
include(root + '_data/_require.ejs')

/* ページ情報 */
const data   = init({
  root       : root, // ルートディレクトリへの相対パス
  title      : '内部ページタイトル', // ページタイトル
  description: 'ディスクリプションが入ります', // ディスクリプション
  slug       : '', // ページ情報判断するためのslug（default: home）
  pageType   : '', // ページタイプを判断（ default: page | single ）
  file       : '', // カノニカルurl等に使用、htmlとしてレンダリングされた場合のルートからの実際ファイル名（index等は省略）
  titleTag   : '', // titleを設定すると勝手にタイトルタグを作りますが、それを上書きする場合はこちらに
  ogType     : 'website', // og:type（default:）
  bodyClass  : '', // body追加したいclass
  hero       : { // ヒーロー用
    parent   : '', // 親ページタイトル等
    // main  : '', // メインタイトル 省略することで titile を継承する
    sub      : '', // 英字表記・サブタイトル等
    bgImage  : '' // 背景イメージファイル名（画像は assets/images/common/ に設置想定）
  }
})

/* 生データ上書き */
// data.head.canonical = false
// data.head.og.url = false

/* 扱いやすくデータを変数に */
const fvGet = data.get(data)
_%>

