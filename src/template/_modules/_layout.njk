{# config.jsonで予め構築環境の設定を行いましょう！ #}
{# 環境特定 #}
{%- set ENVIRONMENT = 'local' -%} {# public | dev | local #}

{# wordpress流し込み用に共通パーツの表示を操作 #}
{%- set WPMODE = false -%}
{%- if WPMODE == true -%}
{%- set ENVIRONMENT = 'public' -%}
{%- endif -%}

{%- set IS_PUBLIC = true if ENVIRONMENT !== 'local' else false -%}
{%- set IS_WP = false -%}
{# 絶対パスモードの有効化 #}
{%- set ABSOLUTE_MODE = false -%}

{# サイトURL #}
{%- if ENVIRONMENT === 'local' -%}
{%- set SITE_URL = data.siteUrl.local -%}
{%- elseif ENVIRONMENT === 'dev' -%}
{%- set SITE_URL = data.siteUrl.dev -%}
{%- else -%}
{%- set SITE_URL = data.siteUrl.public -%}
{%- set IS_WP = true -%}
{%- endif -%}

{# 名前関係：ファイル #}
{%- set NAME_ASSETS = data.dirName.wpAssets if IS_WP else data.dirName.assets -%}
{%- set NAME_MEDIA = data.dirName.media -%}
{%- set NAME_CSS = data.dirName.css -%}
{%- set NAME_JS = data.dirName.js -%}
{%- set NAME_IMAGES = data.dirName.images -%}
{%- set NAME_SVG = data.dirName.svg -%}
{%- set NAME_FILE_STYLE = data.fileName.style if IS_PUBLIC else data.fileName.styleDev -%}
{%- set NAME_FILE_JS = data.fileName.js if IS_PUBLIC else data.fileName.jsDev -%}

{# パス：相対 #}
{%- if ENVIRONMENT === 'local' -%}
{%- set FV_ROOT = data.path.rootLocal -%}
{%- elseif ENVIRONMENT === 'dev' -%}
{%- set FV_ROOT = data.path.rootDev -%}
{%- else -%}
{%- set FV_ROOT = data.path.root -%}
{%- endif -%}
{%- set FV_ROOT_ASSETS = FV_ROOT + NAME_ASSETS + '/' -%}
{%- set FV_ROOT_MEDIA = FV_ROOT_ASSETS + NAME_MEDIA + '/' -%}
{%- set FV_ROOT_IMAGES = FV_ROOT_ASSETS + NAME_IMAGES + '/' -%}
{%- set FV_ROOT_CSS = FV_ROOT_ASSETS + NAME_CSS + '/' -%}
{%- set FV_ROOT_JS = FV_ROOT_ASSETS + NAME_JS + '/' -%}
{%- set FV_ROOT_SVG = FV_ROOT_ASSETS + NAME_SVG + '/' -%}

{# パス：絶対 #}
{%- set FV_ABSOLUTE_ROOT = SITE_URL + FV_ROOT -%}
{%- set FV_ABSOLUTE_ASSETS = SITE_URL + FV_ROOT_ASSETS -%}
{%- set FV_ABSOLUTE_MEDIA = SITE_URL + FV_ROOT_MEDIA -%}
{%- set FV_ABSOLUTE_IMAGES = SITE_URL + FV_ROOT_IMAGES -%}
{%- set FV_ABSOLUTE_CSS = SITE_URL + FV_ROOT_CSS -%}
{%- set FV_ABSOLUTE_JS = SITE_URL + FV_ROOT_JS -%}
{%- set FV_ABSOLUTE_SVG = SITE_URL + FV_ROOT_SVG -%}

{# 絶対パスモード #}
{%- if ABSOLUTE_MODE -%}
{%- set FV_ROOT = FV_ABSOLUTE_ROOT -%}
{%- set FV_ROOT_ASSETS = FV_ROOT + NAME_ASSETS + '/' -%}
{%- set FV_ROOT_MEDIA = FV_ROOT_ASSETS + NAME_MEDIA + '/' -%}
{%- set FV_ROOT_IMAGES = FV_ROOT_ASSETS + NAME_IMAGES + '/' -%}
{%- set FV_ROOT_CSS = FV_ROOT_ASSETS + NAME_CSS + '/' -%}
{%- set FV_ROOT_JS = FV_ROOT_ASSETS + NAME_JS + '/' -%}
{%- set FV_ROOT_SVG = FV_ROOT_ASSETS + NAME_SVG + '/' -%}
{%- endif -%}

