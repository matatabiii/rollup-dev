  set fvGet = {
    'sitename': data.sitename,
    'title': fvSet.title if fvSet.title + ' | ' + data.basename else 'ページタイトルを必ず設定してください',
    'description': '<meta name="description" content="' + fvSet.description + '">' if fvSet.description else '',
    'ogdescription': '<meta property="og:description" content="' + fvSet.description + '">' if fvSet.description else '',
    'canonical': '<link rel="canonical" href="' + (FV_ABSOLUTE_ROOT) + (fvSet.canonical) + '">' if fvSet.canonical !== false else '',
    'ogurl': '<link property="og:url" href="' + (FV_ABSOLUTE_ROOT) + (fvSet.ogurl) + '">' if fvSet.ogurl !== false else '',
    'ogurltwitter': '<link name="twitter:url" href="' + (FV_ABSOLUTE_ROOT) + '">' if fvSet.canonical else '',
    'ogtype': fvSet.ogtype if fvSet.ogtype else 'article',
    'ogimage': fvSet.ogimage if fvSet.ogimage else FV_ABSOLUTE_IMAGES + 'outside/og-image.jpg',
    'robots': fvSet.robots if fvSet.robots else '',
    'theme': fvSet.theme if fvSet.theme else 'home',
    'page': fvSet.page if fvSet.page else 'home',
    'heroMain': fvSet.heroMain if fvSet.heroMain else false,
    'heroSub': fvSet.heroSub if fvSet.heroSub else false,
    'heroParent': fvSet.heroParent if fvSet.heroParent else false,
    'heroBg': fvSet.heroBg if fvSet.heroBg else false,
    'root': FV_ROOT,
    'absolute': FV_ABSOLUTE_ROOT,
    'assets': FV_ROOT_ASSETS,
    'media': FV_ROOT_MEDIA,
    'images': FV_ROOT_IMAGES,
    'css': FV_ROOT_CSS,
    'js': FV_ROOT_JS,
    'googlemap': fvSet.googlemap,
    'subLayout': fvSet.subLayout,
    'subLayoutLarge': fvSet.subLayoutLarge if fvSet.subLayoutLarge else false,
    'single': fvSet.single,
    'timestamp': '' + [1,2,3,4,5,6,7,8,9] | random + [1,2,3,4,5,6,7,8,9] | random + [1,2,3,4,5,6,7,8,9] | random + [1,2,3,4,5,6,7,8,9] | random
  }
-%}

